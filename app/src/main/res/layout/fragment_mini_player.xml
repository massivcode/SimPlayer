<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <fragment
        android:id="@+id/mini_player_info"
        android:layout_weight="1"
        class="com.example.massivcode.simplayer.Fragment.MiniPlayerInfoFragment"
        android:layout_width="0dp"
        android:layout_height="54dp"
        tools:layout="@layout/fragment_mini_player_info" />

    <fragment
        android:id="@+id/mini_player_controller"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:name="com.example.massivcode.simplayer.Fragment.MiniPlayerControllerFragment"
        tools:layout="@layout/fragment_mini_player_controller" />

</LinearLayout>