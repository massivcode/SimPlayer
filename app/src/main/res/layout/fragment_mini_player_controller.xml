<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#000000">

    <Button
        android:id="@+id/mini_player_previous_btn"
        android:background="@drawable/ic_av_skip_previous"
        android:layout_width="48dp"
        android:layout_height="54dp" />

    <Button
        android:id="@+id/mini_player_play_btn"
        android:background="@drawable/ic_av_play_arrow"
        android:layout_width="48dp"
        android:layout_height="54dp" />

    <Button
        android:id="@+id/mini_player_next_btn"
        android:background="@drawable/ic_av_skip_next"
        android:layout_width="48dp"
        android:layout_height="54dp" />

</LinearLayout>